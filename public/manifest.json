{
  "manifest_version": 2,
  "description": "Dodatkowe funkcjonalnosci dla Wykop.pl",
  "version": "0.0.8",
  "name": "Wykop++",
  "author": "Maciej Sawicki",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.wykop.pl/*"
      ],
      "run_at": "document_end",
      "css": [
        "bundle.css"
      ],
      "js": [
        "app.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js",
      "hot-reload.js"
    ]
  }
}
