{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2017",
    "moduleResolution": "node",
    "types": [
      "reflect-metadata",
      "chrome"
    ],
    "lib": [
      "dom.iterable",
      "dom",
      "es7"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ]
}
